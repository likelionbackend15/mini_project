<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: #f5f5f5;" fx:controller="com.studybuddy.client.ui.MyInfoController" >

    <VBox alignment="CENTER"
          spacing="24"
          StackPane.alignment="CENTER"
          style="
              -fx-background-color: white;
              -fx-background-radius: 8;
              -fx-padding: 40 50 40 50;
              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.22), 16, 0.12, 0, 4);
          ">

        <!-- 제목 -->
        <Label text="Stats" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- 사용자 정보 -->
        <VBox spacing="10">
            <HBox spacing="10">
                <Label text="ID" />
                <Label fx:id="idLabel" text="user123" />
            </HBox>
            <HBox spacing="10">
                <Label text="Email" />
                <Label fx:id="emailLabel" text="user@example.com" />
            </HBox>
        </VBox>

        <!-- 비밀번호 변경 버튼 -->
        <Button text="Change Password"
                fx:id="changePasswordButton"
                style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold;"
                maxWidth="200" />

        <!-- 로그아웃 버튼 -->
        <Button text="Log Out"
                fx:id="logoutButton"
                style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-font-weight: bold;"
                maxWidth="200" />

        <!-- 계정 삭제 버튼 -->
        <Button text="Delete Account"
                fx:id="deleteButton"
                style="-fx-background-color: #e53935; -fx-text-fill: white; -fx-font-weight: bold;"
                maxWidth="200" />

    </VBox>

</VBox>
